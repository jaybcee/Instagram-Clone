type Comment {
  id: ID! @id
  uniqueName: String! @unique
  commentText: String!
  commentedAt : DateTime! @createdAt
  user: User! @relation(link: INLINE)
  Post: Post! @relation(link: INLINE)
}

type Post {
  id: ID! @id
  fileName: String!
  caption: String!
  postedAt : DateTime! @createdAt
  owner: User! @relation(link: INLINE)
  comments: [Comment!]
}

type User {
  id: ID! @id
  name: String! @unique
  email: String! @unique
  password: String!
  phone: String!
  posts: [Post!]!
}